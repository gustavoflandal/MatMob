@model MatMob.Models.ViewModels.UserManagementListViewModel
@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="h2 mb-3">
                    <i class="fas fa-users me-2"></i>
                    Gerenciamento de Usuários
                </h1>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Filtros e Pesquisa -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-filter me-2"></i>
                        Filtros
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label for="searchTerm" class="form-label">Buscar</label>
                                <input type="text" class="form-control" id="searchTerm" name="searchTerm" 
                                       value="@Model.SearchTerm" placeholder="Nome, email ou sobrenome">
                            </div>
                            <div class="col-md-3">
                                <label for="roleFilter" class="form-label">Perfil</label>
                                <select class="form-select" id="roleFilter" name="roleFilter">
                                    <option value="">Todos os perfis</option>
                                    @foreach (var role in Model.AvailableRoles)
                                    {
                                        <option value="@role.Value" selected="@(role.Value == Model.RoleFilter)">@role.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="isActiveFilter" class="form-label">Status</label>
                                <select class="form-select" id="isActiveFilter" name="isActiveFilter">
                                    <option value="">Todos</option>
                                    <option value="true" selected="@(Model.IsActiveFilter == true)">Ativos</option>
                                    <option value="false" selected="@(Model.IsActiveFilter == false)">Inativos</option>
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Limpar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ações -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <span class="text-muted">
                        Exibindo @Model.Users.Count usuário(s) de @((Model.CurrentPage - 1) * Model.PageSize + 1) a @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalPages * Model.PageSize)
                    </span>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus"></i> Novo Usuário
                    </a>
                    <a asp-action="UserStatistics" class="btn btn-info">
                        <i class="fas fa-chart-bar"></i> Estatísticas
                    </a>
                </div>
            </div>

            <!-- Lista de Usuários -->
            <div class="card">
                <div class="card-body p-0">
                    @if (Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Último Login</th>
                                        <th>Criado em</th>
                                        <th width="150">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @(user.FirstName?.Substring(0, 1).ToUpper() ?? "U")
                                                    </div>
                                                    <div>
                                                        <strong>@user.FirstName @user.LastName</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@user.Email</td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Ativo
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times"></i> Inativo
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.LastLoginAt.HasValue)
                                                {
                                                    <span title="@user.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm:ss")">
                                                        @user.LastLoginAt.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Nunca</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.CreatedAt.HasValue)
                                                {
                                                    <span title="@user.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm:ss")">
                                                        @user.CreatedAt.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@user.Id" 
                                                       class="btn btn-sm btn-outline-primary" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@user.Id" 
                                                       class="btn btn-sm btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-controller="Permission" asp-action="UserPermissions" asp-route-userId="@user.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Permissões">
                                                        <i class="fas fa-key"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginação -->
                        @if (Model.TotalPages > 1)
                        {
                            <div class="card-footer">
                                <nav aria-label="User pagination">
                                    <ul class="pagination justify-content-center mb-0">
                                        @if (Model.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index" 
                                                   asp-route-page="@(Model.CurrentPage - 1)"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-roleFilter="@Model.RoleFilter"
                                                   asp-route-isActiveFilter="@Model.IsActiveFilter">
                                                    <i class="fas fa-chevron-left"></i> Anterior
                                                </a>
                                            </li>
                                        }

                                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                                <a class="page-link" asp-action="Index" 
                                                   asp-route-page="@i"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-roleFilter="@Model.RoleFilter"
                                                   asp-route-isActiveFilter="@Model.IsActiveFilter">
                                                    @i
                                                </a>
                                            </li>
                                        }

                                        @if (Model.CurrentPage < Model.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" asp-action="Index" 
                                                   asp-route-page="@(Model.CurrentPage + 1)"
                                                   asp-route-searchTerm="@Model.SearchTerm"
                                                   asp-route-roleFilter="@Model.RoleFilter"
                                                   asp-route-isActiveFilter="@Model.IsActiveFilter">
                                                    Próximo <i class="fas fa-chevron-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum usuário encontrado</h5>
                            <p class="text-muted mb-4">Não há usuários que correspondam aos filtros aplicados.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Criar Primeiro Usuário
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
    font-weight: 600;
}

.page-header {
    border-bottom: 1px solid #dee2e6;
    padding-bottom: 1rem;
    margin-bottom: 1.5rem;
}

.btn-group .btn {
    border-radius: 0.375rem;
    margin-right: 2px;
}

.btn-group .btn:last-child {
    margin-right: 0;
}

.table th {
    font-weight: 600;
    color: #495057;
    border-bottom: 2px solid #dee2e6;
}

.badge {
    font-size: 0.75em;
}
</style>