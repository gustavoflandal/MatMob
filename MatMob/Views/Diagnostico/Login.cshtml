@model DiagnosticoLoginViewModel
@{
    ViewData["Title"] = "Diagnóstico de Login";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-stethoscope me-2"></i>Diagnóstico de Login</h2>
            <p class="text-muted">Esta página ajuda a identificar problemas com o sistema de login.</p>
            
            @if (TempData["DiagnosticoMessage"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["DiagnosticoMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>
    </div>

    <!-- Status Geral -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card @(Model.ConexaoBanco ? "border-success" : "border-danger")">
                <div class="card-body text-center">
                    <i class="fas fa-database fa-2x @(Model.ConexaoBanco ? "text-success" : "text-danger") mb-2"></i>
                    <h6>Conexão Banco</h6>
                    <span class="badge @(Model.ConexaoBanco ? "bg-success" : "bg-danger")">
                        @(Model.ConexaoBanco ? "OK" : "ERRO")
                    </span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x text-info mb-2"></i>
                    <h6>Total Usuários</h6>
                    <h4 class="text-info">@Model.TotalUsuarios</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-user-tag fa-2x text-warning mb-2"></i>
                    <h6>Total Roles</h6>
                    <h4 class="text-warning">@Model.TotalRoles</h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card @(Model.AdminEncontrado ? "border-success" : "border-danger")">
                <div class="card-body text-center">
                    <i class="fas fa-user-shield fa-2x @(Model.AdminEncontrado ? "text-success" : "text-danger") mb-2"></i>
                    <h6>Admin</h6>
                    <span class="badge @(Model.AdminEncontrado ? "bg-success" : "bg-danger")">
                        @(Model.AdminEncontrado ? "ENCONTRADO" : "NÃO ENCONTRADO")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (Model.ErroGeral)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Erro Geral:</strong> @Model.MensagemErro
        </div>
    }

    <!-- Detalhes do Admin -->
    @if (Model.AdminEncontrado && Model.AdminInfo != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i>Detalhes do Usuário Admin</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>ID:</strong></td>
                                <td>@Model.AdminInfo.Id</td>
                            </tr>
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>@Model.AdminInfo.Email</td>
                            </tr>
                            <tr>
                                <td><strong>Username:</strong></td>
                                <td>@Model.AdminInfo.UserName</td>
                            </tr>
                            <tr>
                                <td><strong>Email Confirmado:</strong></td>
                                <td>
                                    <span class="badge @(Model.AdminInfo.EmailConfirmed ? "bg-success" : "bg-warning")">
                                        @(Model.AdminInfo.EmailConfirmed ? "SIM" : "NÃO")
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Senha Correta:</strong></td>
                                <td>
                                    <span class="badge @(Model.SenhaCorreta ? "bg-success" : "bg-danger")">
                                        @(Model.SenhaCorreta ? "SIM" : "NÃO")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Login Possível:</strong></td>
                                <td>
                                    <span class="badge @(Model.LoginPossivel ? "bg-success" : "bg-danger")">
                                        @(Model.LoginPossivel ? "SIM" : "NÃO")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Falhas de Login:</strong></td>
                                <td>@Model.AdminInfo.AccessFailedCount</td>
                            </tr>
                            <tr>
                                <td><strong>Bloqueado até:</strong></td>
                                <td>@Model.AdminInfo.LockoutEnd</td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                @if (Model.AdminRoles.Any())
                {
                    <div class="mt-3">
                        <strong>Roles:</strong>
                        @foreach (var role in Model.AdminRoles)
                        {
                            <span class="badge bg-info me-1">@role</span>
                        }
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.LoginDetalhes))
                {
                    <div class="mt-3">
                        <strong>Detalhes do Login:</strong>
                        <code>@Model.LoginDetalhes</code>
                    </div>
                }
            </div>
        </div>
    }
    else if (!Model.AdminEncontrado)
    {
        <div class="card border-danger mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Usuário Admin Não Encontrado</h5>
            </div>
            <div class="card-body">
                <p>O usuário administrador não foi encontrado no banco de dados.</p>
                <form asp-action="CriarAdmin" method="post">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Criar Usuário Admin
                    </button>
                </form>
            </div>
        </div>
    }

    <!-- Lista de Todos os Usuários -->
    @if (Model.Usuarios.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Todos os Usuários no Sistema</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Email Confirmado</th>
                                <th>Falhas Login</th>
                                <th>Bloqueado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model.Usuarios)
                            {
                                <tr class="@(usuario.Email == "admin@matmob.com" ? "table-primary" : "")">
                                    <td>@usuario.Email</td>
                                    <td>@usuario.UserName</td>
                                    <td>
                                        <span class="badge @(usuario.EmailConfirmed ? "bg-success" : "bg-warning")">
                                            @(usuario.EmailConfirmed ? "SIM" : "NÃO")
                                        </span>
                                    </td>
                                    <td>@usuario.AccessFailedCount</td>
                                    <td>@usuario.LockoutEnd</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Lista de Roles -->
    @if (Model.Roles.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-tag me-2"></i>Roles no Sistema</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var role in Model.Roles)
                    {
                        <div class="col-md-4 mb-2">
                            <div class="card border-info">
                                <div class="card-body py-2">
                                    <h6 class="mb-0">@role.Nome</h6>
                                    <small class="text-muted">@role.NormalizedName</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Ir para Login
        </a>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-home me-2"></i>Voltar ao Dashboard
        </a>
    </div>
</div>
