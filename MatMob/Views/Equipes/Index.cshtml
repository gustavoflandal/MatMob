@model IEnumerable<MatMob.Models.Entities.Equipe>
@{
    ViewData["Title"] = "Equipes";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 mb-0">
            <i class="fas fa-users text-primary me-2"></i>Equipes
        </h1>
        <p class="text-muted">Gestão de equipes de trabalho</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nova Equipe
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchString" class="form-label">Buscar</label>
                <input type="text" class="form-control" id="searchString" name="searchString" 
                       value="@ViewData["CurrentFilter"]" placeholder="Nome da equipe ou descrição">
            </div>
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Status</label>
                <select class="form-select" id="statusFilter" name="statusFilter">
                    <option value="">Todos os status</option>
                    @foreach (var status in Enum.GetValues<MatMob.Models.Entities.StatusEquipe>())
                    {
                        <option value="@((int)status)" selected="@(ViewData["StatusFilter"]?.ToString() == ((int)status).ToString())">
                            @status.GetDisplayName()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Lista de Equipes -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var equipe in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="card-title mb-0">@equipe.Nome</h6>
                                @switch (equipe.Status)
                                {
                                    case MatMob.Models.Entities.StatusEquipe.Ativa:
                                        <span class="badge bg-success">Ativa</span>
                                        break;
                                    case MatMob.Models.Entities.StatusEquipe.Inativa:
                                        <span class="badge bg-secondary">Inativa</span>
                                        break;
                                    case MatMob.Models.Entities.StatusEquipe.Suspensa:
                                        <span class="badge bg-warning">Suspensa</span>
                                        break;
                                }
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(equipe.Descricao))
                                {
                                    <p class="card-text text-muted">@equipe.Descricao</p>
                                }
                                
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-users me-1"></i>
                                        @equipe.EquipesTecnico.Count(et => et.Ativo) técnico(s)
                                    </small>
                                </div>

                                @if (equipe.EquipesTecnico.Any(et => et.Ativo))
                                {
                                    <div class="mb-3">
                                        <small class="text-muted d-block mb-1">Técnicos:</small>
                                        @foreach (var equipeTecnico in equipe.EquipesTecnico.Where(et => et.Ativo).Take(3))
                                        {
                                            <span class="badge bg-light text-dark me-1 mb-1">@equipeTecnico.Tecnico.Nome</span>
                                        }
                                        @if (equipe.EquipesTecnico.Count(et => et.Ativo) > 3)
                                        {
                                            <span class="badge bg-secondary">+@(equipe.EquipesTecnico.Count(et => et.Ativo) - 3) mais</span>
                                        }
                                    </div>
                                }

                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    Criada em @equipe.DataCriacao.ToString("dd/MM/yyyy")
                                </small>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@equipe.Id" 
                                       class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-eye me-1"></i>Detalhes
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@equipe.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhuma equipe encontrada</h5>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Criar Primeira Equipe
                </a>
            </div>
        }
    </div>
</div>
