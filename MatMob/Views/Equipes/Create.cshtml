@model MatMob.Models.Entities.Equipe
@{
    ViewData["Title"] = "Nova Equipe";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 mb-0">
            <i class="fas fa-plus text-primary me-2"></i>Nova Equipe
        </h1>
        <p class="text-muted">Criar nova equipe de trabalho</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome da equipe">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            @foreach (var status in Enum.GetValues<MatMob.Models.Entities.StatusEquipe>())
                            {
                                <option value="@((int)status)">@status.GetDisplayName()</option>
                            }
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3" 
                          placeholder="Descrição da equipe e suas responsabilidades"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Técnicos da Equipe</label>
                <div class="row">
                    @if (ViewBag.Tecnicos != null)
                    {
                        var tecnicosList = ViewBag.Tecnicos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> ?? new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
                        @foreach (var tecnico in tecnicosList)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="tecnicoIds" value="@tecnico.Value" id="tecnico_@tecnico.Value">
                                    <label class="form-check-label" for="tecnico_@tecnico.Value">
                                        @tecnico.Text
                                    </label>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <p class="text-muted">Nenhum técnico disponível. <a asp-controller="Tecnicos" asp-action="Create">Cadastre técnicos</a> primeiro.</p>
                        </div>
                    }
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12 text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
