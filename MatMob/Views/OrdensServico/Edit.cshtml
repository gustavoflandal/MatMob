@model MatMob.Models.Entities.OrdemServico
@using MatMob.Models.Entities
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Ordem de Serviço";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="fas fa-edit me-2"></i>Editar Ordem de Serviço</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "OrdensServico")">Ordens de Serviço</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Details", new { id = Model.Id })">@Model.NumeroOS</a></li>
                            <li class="breadcrumb-item active">Editar</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-clipboard-list me-2"></i>Informações da Ordem de Serviço</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DataAbertura" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumeroOS" class="form-label">Número OS</label>
                                    <input asp-for="NumeroOS" class="form-control" readonly />
                                    <span asp-validation-for="NumeroOS" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AtivoId" class="form-label">Ativo</label>
                                    <select asp-for="SolicitanteId" asp-items="@(ViewData["SolicitanteId"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))" class="form-select">
                                        <option value="">Selecionar ativo...</option>
                                    </select>
                                    <span asp-validation-for="AtivoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TipoServico" class="form-label">Tipo de Serviço</label>
                                    <select asp-for="TipoServico" asp-items="Html.GetEnumSelectList<TipoServico>()" class="form-select">
                                        <option value="">Selecionar tipo...</option>
                                    </select>
                                    <span asp-validation-for="TipoServico" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Prioridade" class="form-label">Prioridade</label>
                                    <select asp-for="Prioridade" asp-items="Html.GetEnumSelectList<PrioridadeOS>()" class="form-select">
                                        <option value="">Selecionar prioridade...</option>
                                    </select>
                                    <span asp-validation-for="Prioridade" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">Status</label>
                                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusOS>()" class="form-select">
                                        <option value="">Selecionar status...</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustoEstimado" class="form-label">Custo Estimado</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input asp-for="CustoEstimado" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="CustoEstimado" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EquipeId" class="form-label">Equipe Responsável</label>
                                    <select asp-for="EquipeId" asp-items="@(ViewData["EquipeId"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))" class="form-select">
                                        <option value="">Selecionar equipe...</option>
                                    </select>
                                    <span asp-validation-for="EquipeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TecnicoResponsavelId" class="form-label">Técnico Responsável</label>
                                    <select asp-for="TecnicoResponsavelId" asp-items="@(ViewData["TecnicoResponsavelId"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>()))" class="form-select">
                                        <option value="">Selecionar técnico...</option>
                                    </select>
                                    <span asp-validation-for="TecnicoResponsavelId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DescricaoProblema" class="form-label">Descrição do Problema</label>
                            <textarea asp-for="DescricaoProblema" class="form-control" rows="4" placeholder="Descreva o problema identificado..."></textarea>
                            <span asp-validation-for="DescricaoProblema" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SolucaoAplicada" class="form-label">Solução Aplicada</label>
                            <textarea asp-for="SolucaoAplicada" class="form-control" rows="4" placeholder="Descreva a solução aplicada..."></textarea>
                            <span asp-validation-for="SolucaoAplicada" class="text-danger"></span>
                        </div>

                        <!-- Datas (somente leitura) -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Data de Abertura</label>
                                    <input type="text" class="form-control" value="@Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Data de Início</label>
                                    <input type="text" class="form-control" value="@(Model.DataInicio?.ToString("dd/MM/yyyy HH:mm") ?? "-")" readonly />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label">Data de Conclusão</label>
                                    <input type="text" class="form-control" value="@(Model.DataConclusao?.ToString("dd/MM/yyyy HH:mm") ?? "-")" readonly />
                                </div>
                            </div>
                        </div>

                        <!-- Agendamento -->
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6><i class="fas fa-calendar-alt me-2"></i>Agendamento</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="DataProgramada" class="form-label">Data Programada</label>
                                            <input asp-for="DataProgramada" type="date" class="form-control" value="@(Model.DataProgramada?.ToString("yyyy-MM-dd"))" />
                                            <span asp-validation-for="DataProgramada" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="HoraInicioProgramada" class="form-label">Horário Início</label>
                                            <input asp-for="HoraInicioProgramada" type="time" class="form-control" 
                                                   value="@(Model.HoraInicioProgramada?.ToString(@"hh\:mm"))" />
                                            <span asp-validation-for="HoraInicioProgramada" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label asp-for="HoraFimProgramada" class="form-label">Horário Fim</label>
                                            <input asp-for="HoraFimProgramada" type="time" class="form-control" 
                                                   value="@(Model.HoraFimProgramada?.ToString(@"hh\:mm"))" />
                                            <span asp-validation-for="HoraFimProgramada" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TempoGastoHoras" class="form-label">Tempo Gasto (horas)</label>
                                    <input asp-for="TempoGastoHoras" class="form-control" type="number" step="0.1" />
                                    <span asp-validation-for="TempoGastoHoras" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustoReal" class="form-label">Custo Real</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input asp-for="CustoReal" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="CustoReal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle me-2"></i>Informações</h6>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <i class="fas fa-lightbulb me-1"></i>
                        <strong>Dica:</strong> As datas de início e conclusão são atualizadas automaticamente 
                        quando o status da OS é alterado.
                    </small>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-history me-2"></i>Histórico</h6>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <span class="timeline-marker bg-primary"></span>
                            <div class="timeline-content">
                                <h6 class="timeline-title">OS Criada</h6>
                                <p class="timeline-text">@Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>
                        
                        @if (Model.DataInicio.HasValue)
                        {
                            <div class="timeline-item">
                                <span class="timeline-marker bg-warning"></span>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Iniciada</h6>
                                    <p class="timeline-text">@Model.DataInicio.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.DataConclusao.HasValue)
                        {
                            <div class="timeline-item">
                                <span class="timeline-marker bg-success"></span>
                                <div class="timeline-content">
                                    <h6 class="timeline-title">Concluída</h6>
                                    <p class="timeline-text">@Model.DataConclusao.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-popular técnicos baseado na equipe selecionada
        $('select[name="EquipeId"]').change(function() {
            var equipeId = $(this).val();
            var tecnicoSelect = $('select[name="TecnicoResponsavelId"]');
            
            if (equipeId) {
                $.get('@Url.Action("GetTecnicosPorEquipe", "OrdensServico")', { equipeId: equipeId })
                    .done(function(data) {
                        tecnicoSelect.empty().append('<option value="">Selecionar técnico...</option>');
                        $.each(data, function(i, item) {
                            tecnicoSelect.append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    });
            } else {
                tecnicoSelect.empty().append('<option value="">Selecionar técnico...</option>');
            }
        });
    </script>
}

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -22px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }

    .timeline-content {
        padding-left: 15px;
    }

    .timeline-title {
        font-size: 0.9rem;
        margin-bottom: 5px;
        font-weight: 600;
    }

    .timeline-text {
        font-size: 0.8rem;
        color: #6c757d;
        margin: 0;
    }
</style>
