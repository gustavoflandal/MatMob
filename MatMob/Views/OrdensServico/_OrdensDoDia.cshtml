@model List<MatMob.Models.ViewModels.OrdemServicoAgendada>
@using MatMob.Models.Entities
@using MatMob.Extensions

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Horário</th>
                    <th>OS</th>
                    <th>Ativo</th>
                    <th>Equipe/Técnico</th>
                    <th>Status</th>
                    <th>Prioridade</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ordem in Model.OrderBy(o => o.HoraInicioProgramada))
                {
                    <tr class="@(ordem.EstaAtrasada ? "table-danger" : "")">
                        <td>
                            <strong>@ordem.HorarioFormatado</strong>
                            @if (ordem.EstaAtrasada)
                            {
                                <br><small class="text-danger">
                                    <i class="fas fa-exclamation-triangle me-1"></i>Atrasada
                                </small>
                            }
                        </td>
                        <td>
                            <strong>@ordem.NumeroOS</strong>
                            <br>
                            <small class="text-muted">
                                @ordem.TipoServico.GetDisplayName()
                            </small>
                        </td>
                        <td>
                            <strong>@ordem.NomeAtivo</strong>
                            <br>
                            <small class="text-muted">@ordem.LocalizacaoAtivo</small>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(ordem.NomeEquipe))
                            {
                                <div>
                                    <i class="fas fa-users me-1"></i>@ordem.NomeEquipe
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(ordem.NomeTecnico))
                            {
                                <div>
                                    <i class="fas fa-user me-1"></i>@ordem.NomeTecnico
                                </div>
                            }
                            @if (string.IsNullOrEmpty(ordem.NomeEquipe) && string.IsNullOrEmpty(ordem.NomeTecnico))
                            {
                                <small class="text-muted">Não atribuído</small>
                            }
                        </td>
                        <td>
                            <span class="badge" style="background-color: @ordem.CorStatus;">
                                @ordem.Status.GetDisplayName()
                            </span>
                        </td>
                        <td>
                            <span class="badge" style="background-color: @ordem.CorPrioridade;">
                                @ordem.Prioridade.GetDisplayName()
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="@Url.Action("Details", new { id = ordem.Id })" 
                                   class="btn btn-outline-info" 
                                   title="Ver Detalhes" 
                                   target="_blank">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Detalhada", new { id = ordem.Id })" 
                                   class="btn btn-outline-success" 
                                   title="Gestão Avançada" 
                                   target="_blank">
                                    <i class="fas fa-cogs"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = ordem.Id })" 
                                   class="btn btn-outline-primary" 
                                   title="Editar" 
                                   target="_blank">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Resumo do Dia -->
    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h6>@Model.Count</h6>
                    <small class="text-muted">Total do Dia</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h6>@Model.Count(o => o.Status == StatusOS.EmAndamento)</h6>
                    <small>Em Andamento</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h6>@Model.Count(o => o.Status == StatusOS.Concluida)</h6>
                    <small>Concluídas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h6>@Model.Count(o => o.EstaAtrasada)</h6>
                    <small>Atrasadas</small>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Lista Detalhada -->
    <div class="mt-4">
        <h6 class="mb-3">
            <i class="fas fa-clipboard-list me-2"></i>Descrição dos Serviços
        </h6>
        @foreach (var ordem in Model.OrderBy(o => o.HoraInicioProgramada))
        {
            <div class="card mb-2 @(ordem.EstaAtrasada ? "border-danger" : "")">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h6 class="mb-1">
                                @ordem.NumeroOS - @ordem.NomeAtivo
                                @if (ordem.EstaAtrasada)
                                {
                                    <span class="badge bg-danger ms-2">Atrasada</span>
                                }
                            </h6>
                            <p class="mb-2 text-muted">@ordem.DescricaoProblema</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@ordem.HorarioFormatado
                                        <br>
                                        <i class="fas fa-cog me-1"></i>@ordem.TipoServico.GetDisplayName()
                                    </small>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        @if (!string.IsNullOrEmpty(ordem.NomeEquipe))
                                        {
                                            <i class="fas fa-users me-1"></i>@ordem.NomeEquipe<br>
                                        }
                                        @if (!string.IsNullOrEmpty(ordem.NomeTecnico))
                                        {
                                            <i class="fas fa-user me-1"></i>@ordem.NomeTecnico
                                        }
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="ms-3">
                            <span class="badge mb-1" style="background-color: @ordem.CorStatus;">
                                @ordem.Status.GetDisplayName()
                            </span>
                            <br>
                            <span class="badge" style="background-color: @ordem.CorPrioridade;">
                                @ordem.Prioridade.GetDisplayName()
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Nenhuma ordem de serviço agendada para este dia</h5>
        <p class="text-muted">Use o formulário ao lado para agendar uma nova OS.</p>
    </div>
}
