@model MatMob.Models.ViewModels.PedidoCompraViewModel

@{
    ViewData["Title"] = "Novo Pedido de Compra";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="PedidosCompra" asp-action="Index">Pedidos de Compra</a></li>
            <li class="breadcrumb-item active">Novo</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>
                        Cadastrar Novo Pedido de Compra
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulário -->
    <form asp-action="Create" method="post" id="pedidoForm">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Dados Básicos -->
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3">Dados Básicos</h5>

                                <div class="mb-3">
                                    <label asp-for="NumeroPedido" class="form-label"></label>
                                    <input asp-for="NumeroPedido" class="form-control" required />
                                    <span asp-validation-for="NumeroPedido" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FornecedorId" class="form-label"></label>
                                    <select asp-for="FornecedorId" class="form-select" required id="fornecedorSelect">
                                        <option value="">Selecione um fornecedor</option>
                                        @if (ViewBag.Fornecedores != null)
                                        {
                                            foreach (var fornecedor in ViewBag.Fornecedores as List<SelectListItem>)
                                            {
                                                <option value="@fornecedor.Value">@fornecedor.Text</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Prioridade" class="form-label"></label>
                                    <select asp-for="Prioridade" class="form-select" required>
                                        <option value="1">Baixa</option>
                                        <option value="2" selected>Média</option>
                                        <option value="3">Alta</option>
                                        <option value="4">Urgente</option>
                                    </select>
                                    <span asp-validation-for="Prioridade" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Datas -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Datas</h5>

                                <div class="mb-3">
                                    <label asp-for="DataPrevistaEntrega" class="form-label"></label>
                                    <input asp-for="DataPrevistaEntrega" type="date" class="form-control" />
                                    <span asp-validation-for="DataPrevistaEntrega" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CondicaoPagamento" class="form-label"></label>
                                    <input asp-for="CondicaoPagamento" class="form-control" placeholder="Ex: 30 dias, à vista, etc." />
                                    <span asp-validation-for="CondicaoPagamento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="row">
                            <div class="col-12">
                                <h5 class="mb-3">Observações</h5>

                                <div class="mb-3">
                                    <label asp-for="Observacoes" class="form-label"></label>
                                    <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Itens do Pedido -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Itens do Pedido
                        </h5>
                        <button type="button" class="btn btn-success btn-sm" id="addItemBtn">
                            <i class="fas fa-plus me-2"></i>Adicionar Item
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="itensContainer">
                            <!-- Itens serão adicionados dinamicamente aqui -->
                        </div>

                        <!-- Totais -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h6>Resumo do Pedido</h6>
                                                <div id="resumoPedido">
                                                    <p class="mb-1">Itens: <span id="totalItens">0</span></p>
                                                    <p class="mb-0">Valor Total: R$ <span id="valorTotal">0,00</span></p>
                                                </div>
                                            </div>
                                            <div class="col-md-4 text-end">
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-save me-2"></i>Salvar Pedido
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botões -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Salvar Pedido
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let itemIndex = 0;
        const produtos = @Html.Raw(Json.Serialize(ViewBag.Produtos ?? new List<object>()));

        // Função para adicionar item
        function addItem() {
            const container = document.getElementById('itensContainer');
            const itemHtml = `
                <div class="item-row border rounded p-3 mb-3" data-index="${itemIndex}">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Produto</label>
                            <select name="Itens[${itemIndex}].ProdutoId" class="form-select produto-select" required>
                                <option value="">Selecione um produto</option>
                                ${produtos.map(p => `<option value="${p.id}">${p.nome} (${p.codigo})</option>`).join('')}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Quantidade</label>
                            <input name="Itens[${itemIndex}].QuantidadeSolicitada" type="number" step="0.01" min="0.01"
                                   class="form-control quantidade-input" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Preço Unitário</label>
                            <input name="Itens[${itemIndex}].PrecoUnitario" type="number" step="0.01" min="0.01"
                                   class="form-control preco-input" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Total</label>
                            <input type="text" class="form-control total-input" readonly />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger btn-sm remove-item-btn">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <label class="form-label">Observações</label>
                            <input name="Itens[${itemIndex}].Observacoes" class="form-control" />
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', itemHtml);
            itemIndex++;
            updateTotals();
        }
                        <div class="col-md-2">
                            <label class="form-label">Quantidade</label>
                            <input name="Itens[${itemIndex}].QuantidadeSolicitada" type="number" step="0.01" min="0.01"
                                   class="form-control quantidade-input" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Preço Unitário</label>
                            <input name="Itens[${itemIndex}].PrecoUnitario" type="number" step="0.01" min="0.01"
                                   class="form-control preco-input" required />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Total</label>
                            <input type="text" class="form-control total-input" readonly />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-danger btn-sm remove-item-btn">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-12">
                            <label class="form-label">Observações</label>
                            <input name="Itens[${itemIndex}].Observacoes" class="form-control" />
                        </div>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', itemHtml);
            itemIndex++;
            updateTotals();
        }

        // Função para remover item
        function removeItem(button) {
            button.closest('.item-row').remove();
            updateTotals();
        }

        // Função para atualizar totais
        function updateTotals() {
            const itemRows = document.querySelectorAll('.item-row');
            let totalItens = itemRows.length;
            let valorTotal = 0;

            itemRows.forEach(row => {
                const quantidade = parseFloat(row.querySelector('.quantidade-input').value) || 0;
                const preco = parseFloat(row.querySelector('.preco-input').value) || 0;
                const total = quantidade * preco;
                row.querySelector('.total-input').value = total.toFixed(2);
                valorTotal += total;
            });

            document.getElementById('totalItens').textContent = totalItens;
            document.getElementById('valorTotal').textContent = valorTotal.toFixed(2);
        }

        // Event listeners
        document.getElementById('addItemBtn').addEventListener('click', addItem);

        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-item-btn')) {
                removeItem(e.target);
            }
        });

        document.addEventListener('input', function(e) {
            if (e.target.classList.contains('quantidade-input') || e.target.classList.contains('preco-input')) {
                updateTotals();
            }
        });

        // Adicionar primeiro item automaticamente
        addItem();
    </script>
}