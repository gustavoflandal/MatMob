@model MatMob.Models.Entities.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Produtos" asp-action="Index">Produtos</a></li>
            <li class="breadcrumb-item active">Detalhes</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-box me-2"></i>
                        Detalhes do Produto: @Model.Nome
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações do Produto -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Dados Básicos -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-info-circle me-2"></i>Dados Básicos
                            </h5>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Código:</strong></div>
                                <div class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.Codigo</span>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Nome:</strong></div>
                                <div class="col-sm-8">@Model.Nome</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Descricao))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Descrição:</strong></div>
                                    <div class="col-sm-8">@Model.Descricao</div>
                                </div>
                            }

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Unidade:</strong></div>
                                <div class="col-sm-8">@Model.UnidadeMedida</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Estoque Mínimo:</strong></div>
                                <div class="col-sm-8">@Model.EstoqueMinimo.ToString("N2")</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Status:</strong></div>
                                <div class="col-sm-8">
                                    <span class="badge @(Model.Status == MatMob.Models.Entities.StatusProduto.Ativo ? "bg-success" : Model.Status == MatMob.Models.Entities.StatusProduto.Inativo ? "bg-secondary" : "bg-danger")">
                                        @Model.Status.ToString()
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Observações -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-sticky-note me-2"></i>Observações
                            </h5>

                            @if (!string.IsNullOrEmpty(Model.Observacoes))
                            {
                                <p class="mb-0">@Model.Observacoes</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Nenhuma observação registrada.</p>
                            }
                        </div>
                    </div>

                    <hr>

                    <!-- Informações de auditoria -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-clock me-2"></i>Informações do Sistema
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Criado em:</strong></div>
                                        <div class="col-sm-8">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Última atualização:</strong></div>
                                        <div class="col-sm-8">@(Model.UltimaAtualizacao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fornecedores -->
    @if (Model.Fornecedores != null && Model.Fornecedores.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-building me-2"></i>
                            Fornecedores (@Model.Fornecedores.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Fornecedor</th>
                                        <th>Preço</th>
                                        <th>Condição de Pagamento</th>
                                        <th>Prazo de Entrega</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fornecedor in Model.Fornecedores.OrderBy(f => f.Fornecedor?.Nome))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@fornecedor.Fornecedor?.Nome</strong>
                                                @if (!string.IsNullOrEmpty(fornecedor.Fornecedor?.NomeFantasia))
                                                {
                                                    <br><small class="text-muted">@fornecedor.Fornecedor?.NomeFantasia</small>
                                                }
                                            </td>
                                            <td>R$ @fornecedor.Preco.ToString("N2")</td>
                                            <td>@fornecedor.CondicaoPagamento</td>
                                            <td>
                                                @(fornecedor.PrazoEntregaDias.HasValue ? $"{fornecedor.PrazoEntregaDias} dias" : "Não informado")
                                            </td>
                                            <td>
                                                <span class="badge @(fornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Ativo ? "bg-success" : fornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Inativo ? "bg-secondary" : "bg-warning")">
                                                    @fornecedor.Status.ToString()
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Pedidos de Compra -->
    @if (Model.ItensPedidoCompra != null && Model.ItensPedidoCompra.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Pedidos de Compra (@Model.ItensPedidoCompra.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Número do Pedido</th>
                                        <th>Fornecedor</th>
                                        <th>Quantidade</th>
                                        <th>Preço Unitário</th>
                                        <th>Total</th>
                                        <th>Data</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ItensPedidoCompra.OrderByDescending(i => i.PedidoCompra?.DataPedido))
                                    {
                                        <tr>
                                            <td>@item.PedidoCompra?.NumeroPedido</td>
                                            <td>@item.PedidoCompra?.Fornecedor?.Nome</td>
                                            <td>@item.QuantidadeSolicitada.ToString("N2") @Model.UnidadeMedida</td>
                                            <td>R$ @item.PrecoUnitario.ToString("N2")</td>
                                            <td>R$ @item.ValorTotal.ToString("N2")</td>
                                            <td>@item.PedidoCompra?.DataPedido.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Botões de ação -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>