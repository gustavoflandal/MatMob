@model MatMob.Models.Entities.Produto

@{
    ViewData["Title"] = $"Gerenciar Fornecedores - {Model.Nome}";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Produtos" asp-action="Index">Produtos</a></li>
            <li class="breadcrumb-item"><a asp-controller="Produtos" asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a></li>
            <li class="breadcrumb-item active">Gerenciar Fornecedores</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0">
                            <i class="fas fa-link me-2"></i>
                            Gerenciar Fornecedores
                        </h4>
                        <small class="text-light">
                            Produto: <strong>@Model.Nome</strong> (@Model.Codigo)
                        </small>
                    </div>
                    <div>
                        <button type="button" class="btn btn-light btn-sm me-2" onclick="abrirModalAdicionarFornecedor()">
                            <i class="fas fa-plus me-2"></i>Adicionar Fornecedor
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fornecedores Vinculados -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-users me-2"></i>
                        Fornecedores Vinculados (@Model.Fornecedores?.Count ?? 0)
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Fornecedores != null && Model.Fornecedores.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Fornecedor</th>
                                        <th>Código do Fornecedor</th>
                                        <th>Preço Unitário</th>
                                        <th>Qtd. Embalagem</th>
                                        <th>Modo Faturamento</th>
                                        <th>Prazo Entrega</th>
                                        <th>Status</th>
                                        <th>Data Atualização</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produtoFornecedor in Model.Fornecedores.OrderBy(pf => pf.Fornecedor?.Nome))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@produtoFornecedor.Fornecedor?.Nome</strong>
                                                @if (!string.IsNullOrEmpty(produtoFornecedor.Fornecedor?.NomeFantasia))
                                                {
                                                    <br><small class="text-muted">@produtoFornecedor.Fornecedor?.NomeFantasia</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(produtoFornecedor.CodigoFornecedor))
                                                {
                                                    <span class="badge bg-secondary">@produtoFornecedor.CodigoFornecedor</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>R$ @produtoFornecedor.Preco.ToString("N2")</td>
                                            <td>
                                                @if (produtoFornecedor.QuantidadeEmbalagem.HasValue)
                                                {
                                                    @produtoFornecedor.QuantidadeEmbalagem.Value.ToString("N2")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(produtoFornecedor.ModoFaturamento))
                                                {
                                                    @produtoFornecedor.ModoFaturamento
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (produtoFornecedor.PrazoEntregaDias.HasValue)
                                                {
                                                    <text>@produtoFornecedor.PrazoEntregaDias.Value dias</text>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(produtoFornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Ativo ? "bg-success" : produtoFornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Inativo ? "bg-secondary" : "bg-warning")">
                                                    @produtoFornecedor.Status.ToString()
                                                </span>
                                            </td>
                                            <td>@produtoFornecedor.DataAtualizacao.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary"
                                                            onclick="editarFornecedor(@produtoFornecedor.Id)"
                                                            title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <form asp-action="RemoverFornecedor" method="post" class="d-inline"
                                                          onsubmit="return confirm('Tem certeza que deseja remover este fornecedor do produto?')">
                                                        <input type="hidden" name="produtoFornecedorId" value="@produtoFornecedor.Id" />
                                                        <input type="hidden" name="produtoId" value="@Model.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Remover">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum fornecedor vinculado</h5>
                            <p class="text-muted">Este produto ainda não possui fornecedores vinculados.</p>
                            <button type="button" class="btn btn-primary" onclick="abrirModalAdicionarFornecedor()">
                                <i class="fas fa-plus me-2"></i>Vincular Primeiro Fornecedor
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Adicionar Fornecedor -->
<div class="modal fade" id="modalAdicionarFornecedor" tabindex="-1" aria-labelledby="modalAdicionarFornecedorLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAdicionarFornecedorLabel">Vincular Fornecedor ao Produto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formAdicionarFornecedor" asp-action="AdicionarFornecedor" method="post">
                <input type="hidden" name="produtoId" value="@Model.Id" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="fornecedorId" class="form-label">Fornecedor <span class="text-danger">*</span></label>
                            <select class="form-select" id="fornecedorId" name="fornecedorId" required>
                                <option value="">Selecione um fornecedor...</option>
                                @if (ViewBag.FornecedoresDisponiveis != null)
                                {
                                    foreach (var fornecedor in ViewBag.FornecedoresDisponiveis)
                                    {
                                        <option value="@fornecedor.Id">@fornecedor.Nome (@fornecedor.CNPJ)</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="preco" class="form-label">Preço Unitário <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input type="number" class="form-control" id="preco" name="preco"
                                       min="0.01" step="0.01" required>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="codigoFornecedor" class="form-label">Código do Fornecedor</label>
                            <input type="text" class="form-control" id="codigoFornecedor" name="codigoFornecedor"
                                   maxlength="50" placeholder="Código interno do fornecedor">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="quantidadeEmbalagem" class="form-label">Quantidade por Embalagem</label>
                            <input type="number" class="form-control" id="quantidadeEmbalagem" name="quantidadeEmbalagem"
                                   min="0.01" step="0.01" placeholder="Ex: 10, 50, 100">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="modoFaturamento" class="form-label">Modo de Faturamento</label>
                            <input type="text" class="form-control" id="modoFaturamento" name="modoFaturamento"
                                   maxlength="50" placeholder="Ex: Nota Fiscal, Boleto, etc.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="prazoEntregaDias" class="form-label">Prazo de Entrega (dias)</label>
                            <input type="number" class="form-control" id="prazoEntregaDias" name="prazoEntregaDias"
                                   min="0" max="365" placeholder="Ex: 7, 15, 30">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="dataValidade" class="form-label">Data de Validade</label>
                            <input type="date" class="form-control" id="dataValidade" name="dataValidade">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="condicaoPagamento" class="form-label">Condição de Pagamento</label>
                            <input type="text" class="form-control" id="condicaoPagamento" name="condicaoPagamento"
                                   maxlength="100" placeholder="Ex: 30 dias, 15/30/45 dias, etc.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label for="observacoes" class="form-label">Observações</label>
                            <textarea class="form-control" id="observacoes" name="observacoes" rows="3"
                                      placeholder="Observações sobre este fornecedor..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Vincular Fornecedor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalAdicionarFornecedor() {
            $('#modalAdicionarFornecedorLabel').text('Vincular Fornecedor ao Produto');
            $('#formAdicionarFornecedor')[0].reset();
            $('#modalAdicionarFornecedor').modal('show');
        }

        function editarFornecedor(produtoFornecedorId) {
            // TODO: Implementar edição de fornecedor vinculado
            toastr.info('Funcionalidade de edição será implementada em breve.');
        }

        // Inicializar tooltips
        $(document).ready(function() {
            $('[title]').tooltip();
        });
    </script>
}