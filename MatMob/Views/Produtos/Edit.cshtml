@model MatMob.Models.Entities.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Produtos" asp-action="Index">Produtos</a></li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Editar Produto: @Model.Nome
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulário -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <!-- Dados Básicos -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Dados Básicos</h5>

                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label"></label>
                                    <input asp-for="Codigo" class="form-control" required />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Nome" class="form-label"></label>
                                    <input asp-for="Nome" class="form-control" required />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Descricao" class="form-label"></label>
                                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Configurações -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Configurações</h5>

                                <div class="mb-3">
                                    <label asp-for="UnidadeMedida" class="form-label"></label>
                                    <select asp-for="UnidadeMedida" class="form-select" required>
                                        <option value="">Selecione a unidade</option>
                                        <option value="UN">Unidade</option>
                                        <option value="KG">Quilograma</option>
                                        <option value="G">Grama</option>
                                        <option value="L">Litro</option>
                                        <option value="ML">Mililitro</option>
                                        <option value="M">Metro</option>
                                        <option value="CM">Centímetro</option>
                                        <option value="MM">Milímetro</option>
                                        <option value="M2">Metro Quadrado</option>
                                        <option value="M3">Metro Cúbico</option>
                                        <option value="PCT">Pacote</option>
                                        <option value="CX">Caixa</option>
                                        <option value="RL">Rolo</option>
                                        <option value="TB">Tubo</option>
                                        <option value="LT">Lata</option>
                                        <option value="FR">Frasco</option>
                                        <option value="SC">Saco</option>
                                        <option value="BD">Balde</option>
                                        <option value="GL">Galão</option>
                                    </select>
                                    <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EstoqueMinimo" class="form-label"></label>
                                    <input asp-for="EstoqueMinimo" type="number" step="0.01" min="0" class="form-control" required />
                                    <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select" required>
                                        <option value="1">Ativo</option>
                                        <option value="2">Inativo</option>
                                        <option value="3">Descontinuado</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Observações -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Observações</h5>

                                <div class="mb-3">
                                    <label asp-for="Observacoes" class="form-label"></label>
                                    <textarea asp-for="Observacoes" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Informações de auditoria -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Informações do Sistema</h5>

                                <div class="mb-2">
                                    <strong>Criado em:</strong> @Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")
                                </div>
                                <div class="mb-2">
                                    <strong>Última atualização:</strong> @Model.UltimaAtualizacao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca"
                                </div>
                            </div>
                        </div>

                        <!-- Botões -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Voltar
                                    </a>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                            <i class="fas fa-eye me-2"></i>Ver Detalhes
                                        </a>
                                        <button type="submit" class="btn btn-warning">
                                            <i class="fas fa-save me-2"></i>Salvar Alterações
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>