@model IEnumerable<MatMob.Models.Entities.AuditModuleConfig>
@{
    ViewData["Title"] = "Configurar Auditoria";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="fas fa-sliders-h me-2"></i>Configurar Auditoria</h3>
        <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus me-1"></i>Novo</a>
    </div>

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Módulo</th>
                        <th>Processo</th>
                        <th>Ativo</th>
                        <th style="width:160px">Ações</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Module</td>
                            <td>@(string.IsNullOrEmpty(item.Process) ? "(Todos)" : item.Process)</td>
                            <td>
                                @if (item.Enabled)
                                {
                                    <span class="badge bg-success">Habilitado</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Desabilitado</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Nenhuma regra cadastrada</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
