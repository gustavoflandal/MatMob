@model MatMob.Models.ViewModels.AuditConfigMatrixViewModel
@{
    ViewData["Title"] = "Gerenciar Auditoria";
}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="fas fa-sliders-h me-2"></i>Gerenciar Auditoria</h3>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2"><i class="fas fa-list"></i> Regras</a>
        </div>
    </div>

    <form asp-action="Manage" method="post">
        <div class="card">
            <div class="card-body table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th style="width:220px">MÃ³dulo (Categoria)</th>
                            @foreach (var p in Model.Processes)
                            {
                                <th class="text-center"><span class="badge bg-primary">@p</span></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model.Modules)
                        {
                            <tr>
                                <td><strong>@m</strong></td>
                                @foreach (var p in Model.Processes)
                                {
                                    var key = $"{m}|{p}";
                                    var isChecked = Model.EnabledPairs.Contains(key);
                                    <td class="text-center">
                                        <input type="checkbox" name="EnabledPairs" value="@key" class="form-check-input" @(isChecked ? "checked" : null) />
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Salvar</button>
                <a asp-action="Manage" class="btn btn-secondary">Recarregar</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
