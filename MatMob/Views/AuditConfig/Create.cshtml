@model MatMob.Models.Entities.AuditModuleConfig
@{
    ViewData["Title"] = "Nova Regra de Auditoria";
}
<div class="container">
    <h3 class="mb-3"><i class="fas fa-plus me-2"></i>Nova Regra de Auditoria</h3>

    <form asp-action="Create" method="post" class="card p-3">
        <div class="mb-3">
            <label asp-for="Module" class="form-label">Módulo (Categoria)</label>
            <input asp-for="Module" class="form-control" placeholder="Ex.: AUTHENTICATION, DATA_MODIFICATION, REPORTING" />
            <span asp-validation-for="Module" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Process" class="form-label">Processo (Ação)</label>
            <input asp-for="Process" class="form-control" placeholder="Ex.: LOGIN, CREATE, UPDATE, DELETE, EXPORT (ou deixe vazio para todos)" />
            <span class="form-text">Deixe vazio para aplicar a todos os processos do módulo.</span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="Enabled" class="form-check-input" />
            <label asp-for="Enabled" class="form-check-label">Habilitado</label>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Salvar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
