@model MatMob.Models.Entities.Fornecedor

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-controller="Fornecedores" asp-action="Index">Fornecedores</a></li>
            <li class="breadcrumb-item active">Detalhes</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-info">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-building me-2"></i>
                        Detalhes do Fornecedor: @Model.Nome
                    </h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações do Fornecedor -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <!-- Dados Básicos -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-info-circle me-2"></i>Dados Básicos
                            </h5>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Nome/Razão Social:</strong></div>
                                <div class="col-sm-8">@Model.Nome</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.NomeFantasia))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Nome Fantasia:</strong></div>
                                    <div class="col-sm-8">@Model.NomeFantasia</div>
                                </div>
                            }

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>CNPJ:</strong></div>
                                <div class="col-sm-8">@Model.CNPJ</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.InscricaoEstadual))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Inscrição Estadual:</strong></div>
                                    <div class="col-sm-8">@Model.InscricaoEstadual</div>
                                </div>
                            }

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Status:</strong></div>
                                <div class="col-sm-8">
                                    <span class="badge @(Model.Status == MatMob.Models.Entities.StatusFornecedor.Ativo ? "bg-success" : Model.Status == MatMob.Models.Entities.StatusFornecedor.Inativo ? "bg-secondary" : "bg-danger")">
                                        @Model.Status.ToString()
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Endereço -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-map-marker-alt me-2"></i>Endereço
                            </h5>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Endereço:</strong></div>
                                <div class="col-sm-8">@Model.Endereco</div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Bairro))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Bairro:</strong></div>
                                    <div class="col-sm-8">@Model.Bairro</div>
                                </div>
                            }

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Cidade:</strong></div>
                                <div class="col-sm-8">@Model.Cidade - @Model.Estado</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>CEP:</strong></div>
                                <div class="col-sm-8">@Model.CEP</div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <!-- Contato -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-phone me-2"></i>Contato
                            </h5>

                            <div class="row mb-2">
                                <div class="col-sm-4"><strong>Email:</strong></div>
                                <div class="col-sm-8">
                                    <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.Telefone))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Telefone:</strong></div>
                                    <div class="col-sm-8">@Model.Telefone</div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Celular))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Celular:</strong></div>
                                    <div class="col-sm-8">@Model.Celular</div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.NomeContato))
                            {
                                <div class="row mb-2">
                                    <div class="col-sm-4"><strong>Contato:</strong></div>
                                    <div class="col-sm-8">@Model.NomeContato</div>
                                </div>
                            }
                        </div>

                        <!-- Observações -->
                        <div class="col-md-6">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-sticky-note me-2"></i>Observações
                            </h5>

                            @if (!string.IsNullOrEmpty(Model.Observacoes))
                            {
                                <p class="mb-0">@Model.Observacoes</p>
                            }
                            else
                            {
                                <p class="text-muted mb-0">Nenhuma observação registrada.</p>
                            }
                        </div>
                    </div>

                    <hr>

                    <!-- Informações de auditoria -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-3 text-primary">
                                <i class="fas fa-clock me-2"></i>Informações do Sistema
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Criado em:</strong></div>
                                        <div class="col-sm-8">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Última atualização:</strong></div>
                                        <div class="col-sm-8">@(Model.UltimaAtualizacao?.ToString("dd/MM/yyyy HH:mm") ?? "Nunca")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Produtos Fornecidos -->
    @if (Model.ProdutosFornecidos != null && Model.ProdutosFornecidos.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-boxes me-2"></i>
                            Produtos Fornecidos (@Model.ProdutosFornecidos.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Código</th>
                                        <th>Nome do Produto</th>
                                        <th>Preço Unitário</th>
                                        <th>Validade</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var produtoFornecedor in Model.ProdutosFornecidos.OrderBy(p => p.Produto?.Nome))
                                    {
                                        <tr>
                                            <td>@produtoFornecedor.Produto?.Codigo</td>
                                            <td>@produtoFornecedor.Produto?.Nome</td>
                                            <td>R$ @produtoFornecedor.Preco.ToString("N2")</td>
                                            <td>@produtoFornecedor.DataValidade?.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge @(produtoFornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Ativo ? "bg-success" : produtoFornecedor.Status == MatMob.Models.Entities.StatusProdutoFornecedor.Inativo ? "bg-secondary" : "bg-warning")">
                                                    @produtoFornecedor.Status.ToString()
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Pedidos de Compra -->
    @if (Model.PedidosCompra != null && Model.PedidosCompra.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>
                            Pedidos de Compra (@Model.PedidosCompra.Count)
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Número</th>
                                        <th>Data</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pedido in Model.PedidosCompra.OrderByDescending(p => p.DataPedido))
                                    {
                                        <tr>
                                            <td>@pedido.NumeroPedido</td>
                                            <td>@pedido.DataPedido.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(pedido.Status)">
                                                    @pedido.Status.ToString()
                                                </span>
                                            </td>
                                            <td>R$ @(pedido.ValorTotal?.ToString("N2") ?? "0,00")</td>
                                            <td>
                                                <a asp-controller="PedidosCompra" asp-action="Details" asp-route-id="@pedido.Id"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i> Ver
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Botões de ação -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string GetStatusBadgeClass(MatMob.Models.Entities.StatusPedidoCompra status)
    {
        return status switch
        {
            MatMob.Models.Entities.StatusPedidoCompra.Aberto => "bg-primary",
            MatMob.Models.Entities.StatusPedidoCompra.Aprovado => "bg-success",
            MatMob.Models.Entities.StatusPedidoCompra.Rejeitado => "bg-danger",
            MatMob.Models.Entities.StatusPedidoCompra.ParcialmenteRecebido => "bg-warning",
            MatMob.Models.Entities.StatusPedidoCompra.TotalmenteRecebido => "bg-info",
            MatMob.Models.Entities.StatusPedidoCompra.Cancelado => "bg-secondary",
            _ => "bg-light"
        };
    }
}