@model IEnumerable<MatMob.Models.Entities.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Fornecedores</li>
        </ol>
    </nav>

    <!-- Cabeçalho -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-truck me-2"></i>
                        Gerenciamento de Fornecedores
                    </h4>
                    <a asp-action="Create" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-2"></i>Novo Fornecedor
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Buscar</label>
                            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nome, CNPJ ou Email">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select name="statusFilter" class="form-select">
                                <option value="">Todos</option>
                                <option value="1" selected="@(ViewData["StatusFilter"]?.ToString() == "1")">Ativo</option>
                                <option value="2" selected="@(ViewData["StatusFilter"]?.ToString() == "2")">Inativo</option>
                                <option value="3" selected="@(ViewData["StatusFilter"]?.ToString() == "3")">Bloqueado</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">
                                <i class="fas fa-search me-2"></i>Filtrar
                            </button>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <a asp-action="Index" class="btn btn-secondary d-block">
                                <i class="fas fa-times me-2"></i>Limpar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Fornecedores -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nome</th>
                                        <th>CNPJ</th>
                                        <th>Cidade/UF</th>
                                        <th>Email</th>
                                        <th>Telefone</th>
                                        <th>Status</th>
                                        <th>Data Cadastro</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var fornecedor in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@fornecedor.Nome</strong>
                                                @if (!string.IsNullOrEmpty(fornecedor.NomeFantasia))
                                                {
                                                    <br><small class="text-muted">@fornecedor.NomeFantasia</small>
                                                }
                                            </td>
                                            <td>@fornecedor.CNPJ</td>
                                            <td>@fornecedor.Cidade/@fornecedor.Estado</td>
                                            <td>@fornecedor.Email</td>
                                            <td>@(fornecedor.Telefone ?? fornecedor.Celular ?? "Não informado")</td>
                                            <td>
                                                <span class="badge bg-@(fornecedor.Status == MatMob.Models.Entities.StatusFornecedor.Ativo ? "success" :
                                                                       fornecedor.Status == MatMob.Models.Entities.StatusFornecedor.Inativo ? "secondary" : "danger")">
                                                    @fornecedor.Status.GetDisplayName()
                                                </span>
                                            </td>
                                            <td>@fornecedor.DataCadastro.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@fornecedor.Id" class="btn btn-outline-info" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@fornecedor.Id" class="btn btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@fornecedor.Id" class="btn btn-outline-danger" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-truck fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum fornecedor encontrado</h5>
                            <p class="text-muted">Cadastre o primeiro fornecedor para começar.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Cadastrar Primeiro Fornecedor
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>