@model IEnumerable<MatMob.Models.Entities.Tecnico>
@{
    ViewData["Title"] = "Técnicos";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 mb-0">
            <i class="fas fa-user-hard-hat text-primary me-2"></i>Técnicos
        </h1>
        <p class="text-muted">Gestão de profissionais técnicos</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Novo Técnico
        </a>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label for="searchString" class="form-label">Buscar</label>
                <input type="text" class="form-control" id="searchString" name="searchString" 
                       value="@ViewData["CurrentFilter"]" placeholder="Nome, email ou especialização">
            </div>
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Status</label>
                <select class="form-select" id="statusFilter" name="statusFilter">
                    <option value="">Todos os status</option>
                    @foreach (var status in Enum.GetValues<MatMob.Models.Entities.StatusTecnico>())
                    {
                        <option value="@((int)status)" selected="@(ViewData["StatusFilter"]?.ToString() == ((int)status).ToString())">
                            @status.GetDisplayName()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search me-1"></i>Filtrar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Lista de Técnicos -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Especialização</th>
                            <th>Status</th>
                            <th>Contato</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tecnico in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@tecnico.Nome</div>
                                    @if (tecnico.DataContratacao.HasValue)
                                    {
                                        <small class="text-muted">Desde @tecnico.DataContratacao.Value.ToString("MM/yyyy")</small>
                                    }
                                </td>
                                <td>@tecnico.Email</td>
                                <td>
                                    <span class="badge bg-info">@tecnico.Especializacao</span>
                                </td>
                                <td>
                                    @switch (tecnico.Status)
                                    {
                                        case MatMob.Models.Entities.StatusTecnico.Ativo:
                                            <span class="badge bg-success">Ativo</span>
                                            break;
                                        case MatMob.Models.Entities.StatusTecnico.Inativo:
                                            <span class="badge bg-secondary">Inativo</span>
                                            break;
                                        case MatMob.Models.Entities.StatusTecnico.Ferias:
                                            <span class="badge bg-warning">Férias</span>
                                            break;
                                        case MatMob.Models.Entities.StatusTecnico.Licenca:
                                            <span class="badge bg-info">Licença</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(tecnico.Celular))
                                    {
                                        <div><i class="fas fa-mobile-alt me-1"></i>@tecnico.Celular</div>
                                    }
                                    @if (!string.IsNullOrEmpty(tecnico.Telefone))
                                    {
                                        <div><i class="fas fa-phone me-1"></i>@tecnico.Telefone</div>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@tecnico.Id" 
                                           class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@tecnico.Id" 
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-hard-hat fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum técnico encontrado</h5>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Cadastrar Primeiro Técnico
                </a>
            </div>
        }
    </div>
</div>
