@model MatMob.Models.Entities.Peca
@{
    ViewData["Title"] = "Nova Peça";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 mb-0">
            <i class="fas fa-plus text-primary me-2"></i>Nova Peça
        </h1>
        <p class="text-muted">Cadastrar nova peça no estoque</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Codigo" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Codigo" class="form-control" placeholder="Código da peça">
                            <button type="button" class="btn btn-outline-secondary" onclick="gerarCodigo()">
                                <i class="fas fa-magic"></i> Gerar
                            </button>
                        </div>
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome da peça">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="2" 
                          placeholder="Descrição detalhada da peça"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="UnidadeMedida" class="form-label"></label>
                        <select asp-for="UnidadeMedida" class="form-select">
                            <option value="">Selecione</option>
                            <option value="UN">Unidade (UN)</option>
                            <option value="KG">Quilograma (KG)</option>
                            <option value="M">Metro (M)</option>
                            <option value="L">Litro (L)</option>
                            <option value="PC">Peça (PC)</option>
                            <option value="CX">Caixa (CX)</option>
                            <option value="KIT">Kit (KIT)</option>
                        </select>
                        <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="QuantidadeEstoque" class="form-label"></label>
                        <input asp-for="QuantidadeEstoque" class="form-control" type="number" min="0" placeholder="0">
                        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="EstoqueMinimo" class="form-label"></label>
                        <input asp-for="EstoqueMinimo" class="form-control" type="number" min="0" placeholder="0">
                        <span asp-validation-for="EstoqueMinimo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="PrecoUnitario" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="PrecoUnitario" class="form-control" type="number" step="0.01" min="0" placeholder="0,00">
                        </div>
                        <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Fornecedor" class="form-label"></label>
                        <input asp-for="Fornecedor" class="form-control" placeholder="Nome do fornecedor">
                        <span asp-validation-for="Fornecedor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12 text-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Salvar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function gerarCodigo() {
            fetch('@Url.Action("GerarCodigo", "Pecas")')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('Codigo').value = data;
                })
                .catch(error => {
                    console.error('Erro ao gerar código:', error);
                });
        }
    </script>
}
