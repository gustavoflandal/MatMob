@model IEnumerable<MatMob.Models.Entities.Peca>
@{
    ViewData["Title"] = "Peças com Estoque Baixo";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-6 mb-0">
            <i class="fas fa-exclamation-triangle text-warning me-2"></i>Estoque Baixo
        </h1>
        <p class="text-muted">Peças que precisam de reposição urgente</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Index" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nova Peça
        </a>
    </div>
</div>

<!-- Alerta -->
<div class="alert alert-warning" role="alert">
    <div class="d-flex align-items-center">
        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
        <div>
            <h5 class="alert-heading">Atenção!</h5>
            <p class="mb-0">As peças listadas abaixo estão com estoque igual ou abaixo do mínimo estabelecido. É recomendado fazer a reposição o mais breve possível.</p>
        </div>
    </div>
</div>

<!-- Lista de Peças com Estoque Baixo -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-boxes me-2"></i>
            Peças com Estoque Baixo (@Model.Count())
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>Estoque Atual</th>
                            <th>Estoque Mínimo</th>
                            <th>Diferença</th>
                            <th>Criticidade</th>
                            <th>Fornecedor</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var peca in Model.OrderBy(p => p.QuantidadeEstoque))
                        {
                            var diferenca = peca.EstoqueMinimo - peca.QuantidadeEstoque;
                            var criticidade = peca.QuantidadeEstoque == 0 ? "Crítica" : 
                                            peca.QuantidadeEstoque <= peca.EstoqueMinimo / 2 ? "Alta" : "Média";
                            var badgeClass = peca.QuantidadeEstoque == 0 ? "bg-danger" : 
                                           peca.QuantidadeEstoque <= peca.EstoqueMinimo / 2 ? "bg-warning" : "bg-info";
                            
                            <tr class="@(peca.QuantidadeEstoque == 0 ? "table-danger" : "table-warning")">
                                <td>
                                    <code>@peca.Codigo</code>
                                </td>
                                <td>
                                    <div class="fw-bold">@peca.Nome</div>
                                    @if (!string.IsNullOrEmpty(peca.UnidadeMedida))
                                    {
                                        <small class="text-muted">UN: @peca.UnidadeMedida</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(peca.QuantidadeEstoque == 0 ? "bg-danger" : "bg-warning")">
                                        @peca.QuantidadeEstoque
                                    </span>
                                    @if (peca.QuantidadeEstoque == 0)
                                    {
                                        <i class="fas fa-exclamation-circle text-danger ms-1" title="Estoque zerado!"></i>
                                    }
                                </td>
                                <td>@peca.EstoqueMinimo</td>
                                <td>
                                    @if (diferenca > 0)
                                    {
                                        <span class="text-danger fw-bold">-@diferenca</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">OK</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @badgeClass">@criticidade</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(peca.Fornecedor))
                                    {
                                        @peca.Fornecedor
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@peca.Id" 
                                           class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-success" 
                                                data-bs-toggle="modal" data-bs-target="#modalMovimentacao" 
                                                data-peca-id="@peca.Id" data-peca-nome="@peca.Nome"
                                                title="Movimentar Estoque">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h5 class="text-success">Parabéns!</h5>
                <p class="text-muted">Todas as peças estão com estoque adequado.</p>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-boxes me-1"></i>Ver Todas as Peças
                </a>
            </div>
        }
    </div>
</div>

<!-- Modal para Movimentação de Estoque -->
<div class="modal fade" id="modalMovimentacao" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="MovimentarEstoque">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>Entrada de Estoque
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="pecaId" name="id" />
                    <input type="hidden" name="tipoMovimentacao" value="1" /> <!-- Entrada -->
                    
                    <div class="mb-3">
                        <label class="form-label">Peça</label>
                        <input type="text" id="pecaNome" class="form-control" readonly />
                    </div>
                    
                    <div class="mb-3">
                        <label for="quantidade" class="form-label">Quantidade</label>
                        <input type="number" class="form-control" id="quantidade" name="quantidade" 
                               min="1" required placeholder="Digite a quantidade">
                    </div>
                    
                    <div class="mb-3">
                        <label for="motivo" class="form-label">Motivo</label>
                        <input type="text" class="form-control" id="motivo" name="motivo" 
                               placeholder="Ex: Reposição de estoque">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>Confirmar Entrada
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal de movimentação
        document.getElementById('modalMovimentacao').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var pecaId = button.getAttribute('data-peca-id');
            var pecaNome = button.getAttribute('data-peca-nome');
            
            document.getElementById('pecaId').value = pecaId;
            document.getElementById('pecaNome').value = pecaNome;
            document.getElementById('quantidade').value = '';
            document.getElementById('motivo').value = 'Reposição de estoque baixo';
        });
    </script>
}
