@model List<MatMob.Models.ViewModels.UsuarioViewModel>
@{
    ViewData["Title"] = "Gestão de Usuários";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Gestão de Usuários</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Usuário
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fas fa-list"></i> Lista de Usuários
            <span class="badge bg-secondary ms-2">@Model.Count usuários</span>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>Nome Completo</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Email Confirmado</th>
                            <th>Último Login</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@usuario.Email</strong>
                                    @if (!usuario.IsActive)
                                    {
                                        <span class="badge bg-warning ms-1">Inativo</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(usuario.FullName.Trim()))
                                    {
                                        @usuario.FullName
                                    }
                                    else
                                    {
                                        <em class="text-muted">Não informado</em>
                                    }
                                </td>
                                <td>
                                    @if (usuario.Roles.Any())
                                    {
                                        @foreach (var role in usuario.Roles)
                                        {
                                            <span class="badge bg-info me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sem roles</span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.IsActive)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inativo</span>
                                    }
                                </td>
                                <td>
                                    @if (usuario.EmailConfirmed)
                                    {
                                        <i class="fas fa-check-circle text-success" title="Email confirmado"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle text-danger" title="Email não confirmado"></i>
                                    }
                                </td>
                                <td>
                                    @if (usuario.LastLoginAt.HasValue)
                                    {
                                        @usuario.LastLoginAt.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group" aria-label="Ações do usuário">
                                        <a asp-action="Details" asp-route-id="@usuario.Id" 
                                           class="btn btn-outline-info btn-sm" title="Visualizar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@usuario.Id" 
                                           class="btn btn-outline-primary btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (usuario.IsActive)
                                        {
                                            <form asp-action="ToggleStatus" asp-route-id="@usuario.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning btn-sm" 
                                                        title="Desativar" onclick="return confirm('Deseja desativar este usuário?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="ToggleStatus" asp-route-id="@usuario.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success btn-sm" 
                                                        title="Ativar" onclick="return confirm('Deseja ativar este usuário?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                        <a asp-action="Delete" asp-route-id="@usuario.Id" 
                                           class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum usuário encontrado</h5>
                <p class="text-muted">Clique no botão "Novo Usuário" para adicionar o primeiro usuário.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Criar Primeiro Usuário
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}