@model MatMob.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">@ViewData["Title"]</h4>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Permissoes")">Permissoes</a></li>
                    <li class="breadcrumb-item active">Editar Perfil</li>
                </ol>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fe-edit mr-1"></i>
                        Editar Perfil: @Model.Name
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditRole" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label">Nome do Perfil *</label>
                                    <input asp-for="Name" class="form-control" placeholder="Digite o nome do perfil" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Status</label>
                                    <div class="custom-control custom-checkbox">
                                        <input asp-for="IsActive" type="checkbox" class="custom-control-input" id="IsActive" />
                                        <label class="custom-control-label" for="IsActive">Perfil ativo</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="form-label">Descricao</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descreva as responsabilidades deste perfil"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (ViewBag.Permissions != null)
                        {
                            <div class="form-group">
                                <label class="form-label">Permissoes</label>
                                <div class="card">
                                    <div class="card-body">
                                        @foreach (var permission in ViewBag.Permissions)
                                        {
                                            var isChecked = Model.SelectedPermissions?.Contains(permission.Id) ?? false;
                                            <div class="custom-control custom-checkbox mb-2">
                                                <input type="checkbox" class="custom-control-input" id="permission_@permission.Id" 
                                                       name="SelectedPermissions" value="@permission.Id" @(isChecked ? "checked" : "") />
                                                <label class="custom-control-label" for="permission_@permission.Id">
                                                    <strong>@permission.Name</strong>
                                                    @if (!string.IsNullOrEmpty(permission.Category))
                                                    {
                                                        <span class="badge badge-info ml-1">@permission.Category</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(permission.Description))
                                                    {
                                                        <br><small class="text-muted">@permission.Description</small>
                                                    }
                                                </label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="form-group mb-0">
                            <button type="submit" class="btn btn-success mr-2">
                                <i class="fe-save mr-1"></i>
                                Salvar Alteracoes
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fe-x mr-1"></i>
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}