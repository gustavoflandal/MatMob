<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MatMob</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MatMob.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" asp-controller="Dashboard" asp-action="Index">
                <i class="fas fa-city me-2"></i>MatMob
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-cogs me-1"></i>Ativos
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Ativos" asp-action="Index"><i class="fas fa-list me-1"></i>Listar Ativos</a></li>
                            <li><a class="dropdown-item" asp-controller="Ativos" asp-action="Create"><i class="fas fa-plus me-1"></i>Novo Ativo</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-wrench me-1"></i>Manutenção
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="OrdensServico" asp-action="Index"><i class="fas fa-clipboard-list me-1"></i>Ordens de Serviço</a></li>
                            <li><a class="dropdown-item" asp-controller="OrdensServico" asp-action="Create"><i class="fas fa-plus me-1"></i>Nova OS</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="OrdensServico" asp-action="CalendarioOS"><i class="fas fa-calendar-alt me-1"></i>Calendário de OS</a></li>
                            <li><a class="dropdown-item" asp-controller="OrdensServico" asp-action="Calendario"><i class="fas fa-calendar me-1"></i>Agenda Manutenção</a></li>
                            <li><a class="dropdown-item" asp-controller="OrdensServico" asp-action="Gantt"><i class="fas fa-chart-gantt me-1"></i>Gráfico Gantt</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-users me-1"></i>Equipes
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Tecnicos" asp-action="Index"><i class="fas fa-user-hard-hat me-1"></i>Técnicos</a></li>
                            <li><a class="dropdown-item" asp-controller="Equipes" asp-action="Index"><i class="fas fa-users me-1"></i>Equipes</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-boxes me-1"></i>Estoque
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Pecas" asp-action="Index"><i class="fas fa-list me-1"></i>Peças</a></li>
                            <li><a class="dropdown-item" asp-controller="Pecas" asp-action="EstoqueBaixo"><i class="fas fa-exclamation-triangle me-1"></i>Estoque Baixo</a></li>
                        </ul>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <main class="container-fluid mt-4">
        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2025 MatMob - Sistema de Gestão de Ativos de Mobilidade Urbana</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
