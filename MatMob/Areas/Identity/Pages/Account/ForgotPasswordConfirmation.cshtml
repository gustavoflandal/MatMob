@page
@model MatMob.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Redefinição";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                <i class="fas fa-bus text-white fa-3x mb-3"></i>
                <h2 class="text-white fw-bold mb-1">MatMob</h2>
                <p class="text-white-50 mb-4">Instruções Enviadas</p>
            </div>
        </div>
        
        <div class="login-body">
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Email enviado!</strong><br>
                Verifique seu email para obter instruções sobre como redefinir sua senha.
            </div>
            
            @if (TempData["ResetPasswordUrl"] != null)
            {
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Ambiente de Desenvolvimento:</strong><br>
                    <small>
                        Em produção, você receberia um email. Para teste, use o link abaixo:<br>
                        <a href="@TempData["ResetPasswordUrl"]" class="text-decoration-none">
                            Redefinir Senha Agora
                        </a>
                    </small>
                </div>
            }
        </div>
        
        <div class="login-footer">
            <div class="row text-center">
                <div class="col">
                    <p class="mb-0">
                        <a asp-page="./Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Voltar ao Login
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

