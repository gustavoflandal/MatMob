@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h6 class="mb-0">
            <i class="fas fa-cog me-2"></i>Configurações da Conta
        </h6>
    </div>
    <div class="list-group list-group-flush">
        <a class="list-group-item list-group-item-action d-flex align-items-center @ManageNavPages.IndexNavClass(ViewContext)" 
           asp-page="./Index">
            <i class="fas fa-user me-3 text-primary"></i>
            <div>
                <div class="fw-bold">Perfil</div>
                <small class="text-muted">Informações pessoais</small>
            </div>
        </a>
        <a class="list-group-item list-group-item-action d-flex align-items-center @ManageNavPages.ChangePasswordNavClass(ViewContext)" 
           asp-page="./ChangePassword">
            <i class="fas fa-key me-3 text-warning"></i>
            <div>
                <div class="fw-bold">Alterar Senha</div>
                <small class="text-muted">Segurança da conta</small>
            </div>
        </a>
        <a class="list-group-item list-group-item-action d-flex align-items-center @ManageNavPages.EmailNavClass(ViewContext)" 
           asp-page="./Email">
            <i class="fas fa-envelope me-3 text-info"></i>
            <div>
                <div class="fw-bold">Configurar Email</div>
                <small class="text-muted">Notificações</small>
            </div>
        </a>
        <a class="list-group-item list-group-item-action d-flex align-items-center @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" 
           asp-page="./TwoFactorAuthentication">
            <i class="fas fa-shield-alt me-3 text-success"></i>
            <div>
                <div class="fw-bold">Segurança</div>
                <small class="text-muted">Autenticação 2FA</small>
            </div>
        </a>
        <a class="list-group-item list-group-item-action d-flex align-items-center @ManageNavPages.PersonalDataNavClass(ViewContext)" 
           asp-page="./PersonalData">
            <i class="fas fa-download me-3 text-secondary"></i>
            <div>
                <div class="fw-bold">Dados Pessoais</div>
                <small class="text-muted">Exportar informações</small>
            </div>
        </a>
    </div>
</div>

<div class="card mt-3 shadow">
    <div class="card-body text-center">
        <div class="mb-3">
            <i class="fas fa-question-circle fa-2x text-primary"></i>
        </div>
        <h6 class="card-title">Precisa de Ajuda?</h6>
        <p class="card-text small text-muted mb-3">
            Nossa equipe de suporte está sempre disponível para ajudar.
        </p>
        <a href="mailto:suporte@matmob.com" class="btn btn-outline-primary btn-sm">
            <i class="fas fa-envelope me-1"></i>Contatar Suporte
        </a>
    </div>
</div>
