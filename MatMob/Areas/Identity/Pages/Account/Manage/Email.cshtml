@page
@model MatMob.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Configurar E-mail";
    ViewData["ActivePage"] = ManageNavPages.Email;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Gerenciar Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Configurar E-mail</li>
                </ol>
            </nav>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-envelope me-2"></i>Configurações de E-mail
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    
                    <!-- E-mail Atual -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-envelope me-2 text-info"></i>E-mail Atual
                                    </h6>
                                    <p class="card-text">
                                        <strong>@Model.Email</strong>
                                        @if (Model.IsEmailConfirmed)
                                        {
                                            <span class="badge bg-success ms-2">
                                                <i class="fas fa-check me-1"></i>Confirmado
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning ms-2">
                                                <i class="fas fa-exclamation me-1"></i>Não Confirmado
                                            </span>
                                        }
                                    </p>
                                    @if (!Model.IsEmailConfirmed)
                                    {
                                        <form id="email-verification" method="post" asp-page-handler="SendVerificationEmail">
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-paper-plane me-1"></i>Reenviar Confirmação
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-bell me-2 text-warning"></i>Notificações
                                    </h6>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                        <label class="form-check-label" for="emailNotifications">
                                            Receber notificações por e-mail
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="securityAlerts" checked>
                                        <label class="form-check-label" for="securityAlerts">
                                            Alertas de segurança
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="systemUpdates">
                                        <label class="form-check-label" for="systemUpdates">
                                            Atualizações do sistema
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Alterar E-mail -->
                    <form id="change-email-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" 
                                   placeholder="novo@exemplo.com" />
                            <label asp-for="Input.NewEmail" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Novo E-mail
                            </label>
                            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        </div>
                        
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Atenção:</strong> Após alterar o e-mail, você receberá um link de confirmação no novo endereço.
                        </div>
                        
                        <div class="d-grid">
                            <button id="change-email-button" type="submit" class="btn btn-info">
                                <i class="fas fa-save me-2"></i>Alterar E-mail
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Configurações Avançadas -->
            <div class="card mt-4 shadow">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-cogs me-2"></i>Configurações Avançadas
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-secondary">Frequência de Notificações</h6>
                            <select class="form-select">
                                <option value="immediate">Imediata</option>
                                <option value="daily" selected>Diária</option>
                                <option value="weekly">Semanal</option>
                                <option value="never">Nunca</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-secondary">Formato de E-mail</h6>
                            <select class="form-select">
                                <option value="html" selected>HTML (Formatado)</option>
                                <option value="text">Texto Simples</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-outline-secondary">
                            <i class="fas fa-save me-1"></i>Salvar Configurações
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
