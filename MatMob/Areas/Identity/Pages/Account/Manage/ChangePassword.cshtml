@page
@model MatMob.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Senha";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">Gerenciar Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Alterar Senha</li>
                </ol>
            </nav>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Alterar Senha
                    </h4>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" 
                                   placeholder="Senha atual" />
                            <label asp-for="Input.OldPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>Senha Atual
                            </label>
                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" 
                                   placeholder="Nova senha" />
                            <label asp-for="Input.NewPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>Nova Senha
                            </label>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                                   placeholder="Confirmar nova senha" />
                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>Confirmar Nova Senha
                            </label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="fas fa-save me-2"></i>Alterar Senha
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Dicas de Segurança -->
            <div class="card mt-4 shadow">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>Dicas de Segurança
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-info">
                                <i class="fas fa-check-circle me-1"></i>Requisitos Obrigatórios:
                            </h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-dot-circle me-2 text-primary"></i>Mínimo de 6 caracteres</li>
                                <li><i class="fas fa-dot-circle me-2 text-primary"></i>Pelo menos uma letra maiúscula</li>
                                <li><i class="fas fa-dot-circle me-2 text-primary"></i>Pelo menos uma letra minúscula</li>
                                <li><i class="fas fa-dot-circle me-2 text-primary"></i>Pelo menos um número</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success">
                                <i class="fas fa-lightbulb me-1"></i>Dicas Importantes:
                            </h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-dot-circle me-2 text-success"></i>Evite informações pessoais</li>
                                <li><i class="fas fa-dot-circle me-2 text-success"></i>Use combinações únicas</li>
                                <li><i class="fas fa-dot-circle me-2 text-success"></i>Altere periodicamente</li>
                                <li><i class="fas fa-dot-circle me-2 text-success"></i>Não compartilhe com outros</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
