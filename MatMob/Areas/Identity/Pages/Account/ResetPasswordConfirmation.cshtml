@page
@model MatMob.Areas.Identity.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Senha Redefinida";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                <i class="fas fa-bus text-white fa-3x mb-3"></i>
                <h2 class="text-white fw-bold mb-1">MatMob</h2>
                <p class="text-white-50 mb-4">Senha Alterada</p>
            </div>
        </div>
        
        <div class="login-body">
            <div class="alert alert-success">
                <i class="fas fa-check-circle me-2"></i>
                <strong>Sucesso!</strong><br>
                Sua senha foi redefinida com sucesso.
            </div>
            
            <div class="d-grid">
                <a asp-page="./Login" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                </a>
            </div>
        </div>
    </div>
</div>

