@page
@model MatMob.Areas.Identity.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo-container">
                <i class="fas fa-bus text-white fa-3x mb-3"></i>
                <h2 class="text-white fw-bold mb-1">MatMob</h2>
                <p class="text-white-50 mb-4">Nova Senha</p>
            </div>
        </div>
        
        <div class="login-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <input asp-for="Input.Code" type="hidden" />
                <input asp-for="Input.Email" type="hidden" />
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" readonly 
                           placeholder="nome@exemplo.com" />
                    <label asp-for="Input.Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email
                    </label>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" 
                           placeholder="Nova senha" />
                    <label asp-for="Input.Password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Nova Senha
                    </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" 
                           placeholder="Confirmar nova senha" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">
                        <i class="fas fa-lock me-2"></i>Confirmar Nova Senha
                    </label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Redefinir Senha
                    </button>
                </div>
            </form>
        </div>
        
        <div class="login-footer">
            <div class="row text-center">
                <div class="col">
                    <p class="mb-0">
                        <a asp-page="./Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left me-1"></i>Voltar ao Login
                        </a>
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Informações de Segurança -->
        <div class="demo-info">
            <div class="alert alert-info">
                <h6><i class="fas fa-shield-alt me-2"></i>Requisitos de Senha</h6>
                <ul class="mb-0 small">
                    <li>Mínimo de 6 caracteres</li>
                    <li>Pelo menos uma letra maiúscula</li>
                    <li>Pelo menos uma letra minúscula</li>
                    <li>Pelo menos um número</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

