@page
@model MatMob.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Senha";
    Layout = "_AuthLayout";
}

<div class="auth-card">
    <div class="auth-header">
        <i class="fas fa-key auth-logo"></i>
        <h1 class="auth-title">Recuperar Senha</h1>
        <p class="auth-subtitle">Redefinir acesso ao MatMob</p>
    </div>
    
    <div class="auth-body">
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Digite seu email para receber as instruções de redefinição de senha.
        </div>
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-validation-error"></span>
            </div>
            
            <button type="submit" class="btn btn-auth btn-auth-primary">
                <i class="fas fa-paper-plane me-2"></i>Enviar Instruções
            </button>
        </form>
        
        <div class="auth-links">
            <a asp-page="./Login">
                <i class="fas fa-arrow-left me-1"></i>Voltar ao Login
            </a>
            <div class="auth-divider">
                <span>ou</span>
            </div>
            <a asp-page="./Register" class="btn btn-auth btn-auth-primary">
                <i class="fas fa-user-plus me-2"></i>Criar nova conta
            </a>
            <a href="/" class="btn btn-auth btn-auth-outline">
                <i class="fas fa-home me-2"></i>Início
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Foco automático no campo de email
            $('#Input_Email').focus();
            
            // Validação em tempo real
            $('#Input_Email').on('input', function() {
                $(this).removeClass('is-invalid');
                $(this).next('.text-validation-error').hide();
            });
            
            console.log('Forgot password page initialized');
        });
    </script>
}